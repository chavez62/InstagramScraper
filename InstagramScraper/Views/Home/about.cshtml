@{
    ViewData["Title"] = "About - Instagram Profile Viewer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <!-- Main About Section -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center mb-0">About Instagram Profile Viewer</h3>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-instagram display-1 text-primary"></i>
                    </div>
                    <p class="lead text-center mb-4">
                        A powerful tool for analyzing and viewing detailed Instagram profile information
                    </p>
                </div>
            </div>

            <!-- Features Section -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <i class="bi bi-search display-4 text-primary"></i>
                            </div>
                            <h4 class="text-center mb-3">Easy Profile Search</h4>
                            <p class="text-muted">
                                Simply enter any Instagram username to get comprehensive profile analytics and insights instantly.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <i class="bi bi-graph-up display-4 text-primary"></i>
                            </div>
                            <h4 class="text-center mb-3">Detailed Analytics</h4>
                            <p class="text-muted">
                                Get in-depth statistics including follower counts, engagement rates, post frequency, and account growth metrics.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <i class="bi bi-shield-check display-4 text-primary"></i>
                            </div>
                            <h4 class="text-center mb-3">Privacy Focused</h4>
                            <p class="text-muted">
                                Access only publicly available information while respecting Instagram's terms of service and user privacy.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- How It Works Section -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h4 class="mb-0"><i class="bi bi-info-circle me-2"></i>How It Works</h4>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-3 text-center mb-4 mb-md-0">
                            <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <h3 class="mb-0">1</h3>
                            </div>
                            <h5>Enter Username</h5>
                            <p class="text-muted small">Input any Instagram username in the search box</p>
                        </div>
                        <div class="col-md-3 text-center mb-4 mb-md-0">
                            <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <h3 class="mb-0">2</h3>
                            </div>
                            <h5>Process Data</h5>
                            <p class="text-muted small">Our system fetches and analyzes the profile data</p>
                        </div>
                        <div class="col-md-3 text-center mb-4 mb-md-0">
                            <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <h3 class="mb-0">3</h3>
                            </div>
                            <h5>View Results</h5>
                            <p class="text-muted small">See comprehensive profile analytics and insights</p>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <h3 class="mb-0">4</h3>
                            </div>
                            <h5>Get Insights</h5>
                            <p class="text-muted small">Make informed decisions based on the data</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h4 class="mb-0"><i class="bi bi-question-circle me-2"></i>Frequently Asked Questions</h4>
                </div>
                <div class="card-body p-4">
                    <div class="accordion" id="faqAccordion">
                        <div class="accordion-item border-0 mb-3">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                    Is this tool free to use?
                                </button>
                            </h2>
                            <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body text-muted">
                                    Yes, our Instagram Profile Viewer is completely free to use for basic profile analysis.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item border-0 mb-3">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                    Can I view private profiles?
                                </button>
                            </h2>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body text-muted">
                                    No, this tool only displays publicly available information in accordance with Instagram's terms of service and privacy policies.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item border-0">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                    How accurate is the data?
                                </button>
                            </h2>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body text-muted">
                                    Our tool fetches real-time data directly from Instagram's API, ensuring the most up-to-date and accurate information available.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any custom JavaScript here if needed
    </script>
}
