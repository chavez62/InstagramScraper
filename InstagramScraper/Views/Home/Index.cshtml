@{
    ViewData["Title"] = "Home Page";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="text-center p-5 bg-white rounded-4 shadow-sm">
        <!-- Logo/Icon -->
        <div class="mb-4">
            <i class="bi bi-instagram text-primary" style="font-size: 3rem;"></i>
        </div>

        <!-- Title with Gradient Text -->
        <h1 class="display-4 fw-bold mb-3 bg-gradient bg-primary text-transparent bg-clip-text">
            Instagram Profile Viewer
        </h1>

        <!-- Description -->
        <p class="lead text-muted mb-4">
            View detailed insights and analytics for any Instagram profile
        </p>

        <!-- Call to Action Button -->
        <a href="@Url.Action("Index", "Instagram")"
           class="btn btn-primary btn-lg px-5 py-3 shadow-sm hover-lift">
            <i class="bi bi-search me-2"></i>
            Start Exploring
        </a>

        <!-- Features -->
        <div class="row mt-5 g-4">
            <div class="col-md-4">
                <div class="p-3">
                    <i class="bi bi-graph-up-arrow text-primary mb-3" style="font-size: 2rem;"></i>
                    <h5>Analytics</h5>
                    <p class="text-muted small">Detailed statistics and engagement metrics</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <i class="bi bi-shield-check text-primary mb-3" style="font-size: 2rem;"></i>
                    <h5>Privacy Check</h5>
                    <p class="text-muted small">View account privacy settings</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <i class="bi bi-bar-chart text-primary mb-3" style="font-size: 2rem;"></i>
                    <h5>Insights</h5>
                    <p class="text-muted small">Comprehensive profile information</p>
                </div>
            </div>
        </div>
    </div>
</div>



